{% extends 'base.html.twig' %}

{% block title %}Hello FormController!{% endblock %}

{% block body %}
<style></style>
<div class="container">
        <h2>Formulaire de login</h2>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login-user') }}" method="post">
            <div class="form-group">
                <input placeholder="Votre Email" required name="_username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Votre Password" required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>

    
</div>


{% endblock %}
